{% extends 'base.html.twig' %}

{% block title %}Inscription {{pseudo}} {% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('register') }}
{% endblock %}
{% block body %}
	<h1 class="text-center  creamCakeFont">Inscription</h1>
    {{form_start(form)}}
        {{form_row(form.email, {'label':'Email :','attr':{'placeholder':'Adresse email...'}})}}
        {{form_row(form.password, {'label':'Mot de passe :','attr':{'placeholder':'Mot de passe...'}})}}
        {{form_row(form.adress, {'label':'Adresse :','attr':{'placeholder':'Votre adresse'}})}}
        {{form_row(form.city, {'label':'Ville :','attr':{'placeholder':'Votre ville'}})}}
        <button type="submit" class="btn">Inscription</button>
    {{form_end(form)}}
{% endblock %}
